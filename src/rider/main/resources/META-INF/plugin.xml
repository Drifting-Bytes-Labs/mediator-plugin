<idea-plugin require-restart="true">
  <id>ca.nosuchcompany.rider.plugins.findmyhandlr</id>
  <name>Find My HandlR</name>
  <version>_PLACEHOLDER_</version>
  <vendor url="https://github.com/kzryzstof/find-my-handlr">NoSuch Company</vendor>
  <idea-version since-build="_PLACEHOLDER_" until-build="_PLACEHOLDER_" />
  <depends>com.intellij.modules.rider</depends>

  <description>
<![CDATA[
<p>The plugin provides a way to easily reach the handler of a given MediatR request.</p>
]]>
  </description>

  <actions>
    <group id="org.intellij.sdk.action.GroupedActions" 
           text="MediatR extensions" 
           popup="true">
      <add-to-group group-id="GoToMenu" />
      <action id="GoToHandlrAction"
              class="ca.nosuchcompany.rider.plugins.findmyhandlr.GoToHandlrAction">
        <keyboard-shortcut keymap="$default" first-keystroke="control alt F11" replace-all="true" />
      </action>
    </group>
  </actions>
  
</idea-plugin>
